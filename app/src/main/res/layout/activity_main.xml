<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="bottom">

        <TextView
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="30sp"
            tools:text="123.423" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="fill_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/clear_view"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@color/transparent"
                android:padding="2dp"
                android:text="Clear"
                android:textColor="@color/purple"
                android:textSize="20sp"
                android:onClick="onClearVisorCLick"/>

            <Button
                android:id="@+id/division_op"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="/"
                android:textColor="@color/purple"
                android:textSize="20sp"
                android:onClick="onOpClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/digit_7"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:padding="2dp"
                android:text="7"
                android:textColor="@color/purple"
                android:textSize="20sp"
                android:onClick="onDigitClick"/>

            <Button
                android:id="@+id/digit_8"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="8"
                android:textColor="@color/purple"
                android:textSize="20sp"
                android:onClick="onDigitClick"/>

            <Button
                android:id="@+id/digit_9"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="9"
                android:textColor="@color/purple"
                android:textSize="20sp"
                android:onClick="onDigitClick"/>

            <Button
                android:id="@+id/multiplication_op"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="*"
                android:textColor="@color/purple"
                android:textSize="20sp"
                android:onClick="onOpClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/digit_4"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:padding="2dp"
                android:text="4"
                android:textColor="@color/purple"
                android:textSize="20sp"
                android:onClick="onDigitClick"/>

            <Button
                android:id="@+id/digit_5"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="5"
                android:textColor="@color/purple"
                android:textSize="20sp"
                android:onClick="onDigitClick"/>

            <Button
                android:id="@+id/digit_6"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="6"
                android:textColor="@color/purple"
                android:textSize="20sp"
                android:onClick="onDigitClick"/>

            <Button
                android:id="@+id/subtraction_op"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="-"
                android:textColor="@color/purple"
                android:textSize="20sp"
                android:onClick="onOpClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/digit_1"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:padding="2dp"
                android:text="1"
                android:textColor="@color/purple"
                android:textSize="20sp"
                android:onClick="onDigitClick"/>

            <Button
                android:id="@+id/digit_2"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="2"
                android:textColor="@color/purple"
                android:textSize="20sp"
                android:onClick="onDigitClick"/>

            <Button
                android:id="@+id/digit_3"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="3"
                android:textColor="@color/purple"
                android:textSize="20sp"
                android:onClick="onDigitClick"/>

            <Button
                android:id="@+id/addition_op"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="+"
                android:textColor="@color/purple"
                android:textSize="20sp"
                android:onClick="onOpClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/digit_0"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@color/transparent"
                android:padding="2dp"
                android:text="0"
                android:textColor="@color/purple"
                android:textSize="20sp"
                android:onClick="onDigitClick"/>

            <Button
                android:id="@+id/dot"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="."
                android:textColor="@color/purple"
                android:textSize="20sp"
                android:onClick="onDigitClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/equal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@color/purple"
                android:text="="
                android:textSize="20sp"
                android:onClick="onEqualClick"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>